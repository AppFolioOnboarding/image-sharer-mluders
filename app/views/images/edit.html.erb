<div class="exhibit">
  <div class="row">
    <div class="col-8 offset-2 margin-bottom-50 text-center">
      <h1 class="exhibit__title">
        Edit tags for '<%= @image.title %>'
      </h1>
      <img src="<%= @image.url %>" alt="<%= @image.title %>" class="img-fluid"/>
    </div>
    <div class="col-6 offset-3 margin-bottom-50">
      <%= simple_form_for @image do |f| %>
        <%= f.input :tag_list, :as => :string, input_html: { value: @image.tag_list.to_s } %>
        <%= f.button :submit, 'Save Tags', class: 'btn-primary btn-lg' %>
      <% end %>
    </div>
    </div>
  </div>
</div>